{
  "name": "pwa-gsg",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "yarn run build -aot -prod",
    "build:deploy": "yarn run build:prod --delete-output-path=false",
    "build:deploy:staging": "yarn run build:deploy -e staging",
    "test": "ng test",
    "test:circle": "yarn run test --no-progress --single-run --sourcemaps=false",
    "lint": "yarn run lint:ts && yarn run lint:scss",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:scss:fix",
    "lint:ts": "ng lint --type-check",
    "lint:ts:fix": "yarn lint --fix",
    "lint:scss": "yarn run stylelint -c ./.stylelintrc.js \"src/**/*.scss\"",
    "lint:scss:fix": "yarn lint:scss --fix",
    "precommit": "lint-staged",
    "prettify": "yarn run prettier --config ./prettier.config.js \"src/app/**/*.ts\"",
    "prettify:write": "yarn run prettify --write",
    "prettify:show": "yarn run prettify --list-different"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/cdk": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/flex-layout": "^6.0.0-beta.17",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "core-js": "^2.5.4",
    "g": "^2.0.1",
    "rxjs": "6.1.0",
    "rxjs-compat": "6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.1",
    "@angular/cli": "~6.0.1",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@greatergoods/prettier-config": "^0.0.2",
    "@greatergoods/stylelint-config": "^1.1.3",
    "@greatergoods/tslint-config-gg": "^1.1.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "^5.9.1",
    "typescript": "~2.7.2"
  },
  "lint-staged": {
    "src/app/**/*.ts": [
      "prettier --config ./prettier.config.js --write",
      "yarn run tslint --fix --force",
      "git add"
    ],
    "src/**/*.scss": [
      "yarn run stylelint -c ./.stylelintrc.js --fix",
      "git add"
    ]
  }
}
